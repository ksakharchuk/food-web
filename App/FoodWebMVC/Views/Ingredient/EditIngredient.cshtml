
<h2>@ViewBag.Title</h2>
<form method="post" action="">
    <input type="hidden" value="@ViewBag.Ingredient.ID" name="ID" />
    <input type="hidden" value="@ViewBag.Ingredient.CategoryID" name="CategoryID" />
    <div class="row">
        <div class="col-sm-2">
            <b>Название:</b>
        </div>
        <div class="col-sm-5">
            <input type="text" name="Name" value="@ViewBag.Ingredient.Name" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <b>Штрихкод:</b>
        </div>
        <div class="col-sm-5">
            <input type="text" name="Barcode" value="@ViewBag.Ingredient.Barcode" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <b>Белки:</b>
        </div>
        <div class="col-sm-5">
            <input type="number" name="Proteins" value="@ViewBag.Ingredient.Proteins" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <b>Жиры:</b>
        </div>
        <div class="col-sm-5">
            <input type="number" name="Fats" value="@ViewBag.Ingredient.Fats" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <b>Углеводы:</b>
        </div>
        <div class="col-sm-5">
            <input type="number" name="Carbohydrates" value="@ViewBag.Ingredient.Carbohydrates" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <b>Калорийность:</b>
        </div>
        <div class="col-sm-5">
            <input type="number" name="Energy" value="@ViewBag.Ingredient.Energy" />
        </div>
    </div>
    <input type="submit" value="Сохранить" />
</form>
