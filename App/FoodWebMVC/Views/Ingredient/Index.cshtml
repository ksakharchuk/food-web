<h2>Список ингредиентов</h2>

<a href="/Ingredient/Edit/0">Добавить</a>
<div class="row">
    <div class="col-sm-5">
        <b>Название</b>
    </div>
    <div class="col-sm-2">
        <b>Штрихкод</b>
    </div>
    <div class="col-sm-1">
        <b>Белки</b>
    </div>
    <div class="col-sm-1">
        <b>Жиры</b>
    </div>
    <div class="col-sm-1">
        <b>Углеводы</b>
    </div>
    <div class="col-sm-2">
        <b>Калорийность</b>
    </div>
</div>
@foreach (var i in ViewBag.Ingredients)
{
    <div class="row">
        <div class="col-sm-5">
            @i.Name
        </div>
        <div class="col-sm-2">
            @i.Barcode
        </div>
        <div class="col-sm-1">
            @i.Proteins
        </div>
        <div class="col-sm-1">
            @i.Fats
        </div>
        <div class="col-sm-1">
            @i.Carbohydrates
        </div>
        <div class="col-sm-1">
            @i.Energy
        </div>
        <div class="col-sm-1">
            <a href="/Ingredient/Edit/@i.ID">Изменить</a>
        </div>
    </div>
}