@model IEnumerable<FoodData.Ingredient>

@foreach (FoodData.Ingredient i in Model)
{
    <div class="row">
        <div class="col-sm-5">
            @i.Name
        </div>
        <div class="col-sm-2">
            @i.Barcode
        </div>
        <div class="col-sm-1">
            @i.Proteins
        </div>
        <div class="col-sm-1">
            @i.Fats
        </div>
        <div class="col-sm-1">
            @i.Carbohydrates
        </div>
        <div class="col-sm-1">
            @i.Energy
        </div>
        <div class="col-sm-1">
            <a href="/Ingredient/EditIngredient/@i.ID">Изменить</a>
        </div>
    </div>
}